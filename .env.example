# Odoo MCP Server Configuration
# Copy this file to .env and fill in your values

# Required
ODOO_URL=https://your-instance.odoo.com
ODOO_DB=your-database
ODOO_USERNAME=your-username

# Authentication (use API key OR password)
ODOO_API_KEY=your-api-key
# ODOO_PASSWORD=your-password

# Optional
# ODOO_TIMEOUT=30
# ODOO_VERIFY_SSL=true

# Safety Layer (v1.10.0)
# MCP_SAFETY_MODE=strict        # strict (default) or permissive
# MCP_SAFETY_AUDIT=true         # Enable audit logging to stderr

# DX (v1.11.0)
# MCP_DEFAULT_CONTEXT={"lang": "fr_FR", "tz": "Europe/Paris"}
# MCP_BOOTSTRAP_MODELS=res.partner,sale.order,account.move,product.product,stock.picking
